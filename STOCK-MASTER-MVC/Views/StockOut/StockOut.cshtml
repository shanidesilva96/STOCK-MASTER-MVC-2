                    <div class="row">
                        <div class="col d-flex justify-content-between">
                            <h5 class="card-title">Patient Details</h5>
                        </div>
                    </div>

                    <!-- Block styled form -->
                    <form class="row g-3">
                        <div class="col-md-12">
                            <label for="inputState" class="form-label">Supplier</label>
